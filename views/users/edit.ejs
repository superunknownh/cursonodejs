<% include ../partials/header %>

<div class="row">
	<div class="col-xs-6">
		<form action="/users/edit" method="post">
			<input type="hidden" name="id" value="<%= user.user_id %>">
			<div class="form-group">
				<label>Name:</label>
				<input type="text" name="name" class="form-control" value="<%= user.user_name %>" />
			</div>
			<div class="form-group">
				<label>Password:</label>
				<input type="text" name="password" class="form-control" value="<%= user.user_password %>" />
			</div>
			<div class="form-group">
				<label>Full name:</label>
				<input type="text" name="fullname" class="form-control" value="<%= user.user_fullname %>" />
			</div>
			<div class="form-group">
				<label>Description:</label>
				<textarea name="description" class="form-control"><%= user.user_description %></textarea>
			</div>
			<div class="form-group">
				<label>User type:</label>
				<select name="user_type" class="form-control">
					<% users_types.some(function(user_type) { %>
						<option value="<%= user_type.ut_id %>" <%= user_type.ut_id == user.user_type? 'selected=selected' : '' %>><%= user_type.ut_name %></option>
					<% }); %>
				</select>
			</div>
			<br />
			<div class="form-group">
				<button type="submit" class="btn btn-success"><span class="fa fa-plus"></span> Update</button>
			</div>
		</form>
	</div>
</div>


<% include ../partials/footer %>